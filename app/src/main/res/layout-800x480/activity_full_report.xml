<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.szfp.szfp.view.activity.TransportFullReportActivity"
    android:orientation="vertical">

<HorizontalScrollView
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.szfp.szfplib.weight.StateButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/export"
            android:text="@string/export_str"
            android:gravity="center"
            android:padding="@dimen/space_20"
            app:normalBackgroundColor="@color/login_normal"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/login_pass"
            app:pressedTextColor="@color/white"/>
        <LinearLayout
            android:layout_marginTop="@dimen/space_30"
            android:background="@color/springgreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/text_size_12"
                android:gravity="center"
                android:padding="@dimen/space_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="5"
                android:text="@string/no" />
            <TextView
                android:textSize="@dimen/text_size_12"
                android:gravity="center"
                android:id="@+id/textView3"
                android:padding="@dimen/space_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="7"
                android:text="@string/a_c" />

            <TextView
                android:textSize="@dimen/text_size_12"
                android:padding="@dimen/space_5"
                android:minEms="5"
                android:maxEms="5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deposits" />

            <TextView
                android:textSize="@dimen/text_size_12"
                android:padding="@dimen/space_5"
                android:minEms="9"
                android:maxEms="9"
                android:gravity="center"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_deposited" />

            <TextView
                android:textSize="@dimen/text_size_12"
                android:padding="@dimen/space_5"
                android:minEms="5"
                android:maxEms="5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fare_paid" />

            <TextView
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_5"
                android:minEms="10"
                android:maxEms="10"
                android:gravity="center"
                android:text="@string/date" />

            <TextView
                android:padding="@dimen/space_5"
                android:minEms="5"
                android:maxEms="5"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/balance" />
        </LinearLayout>
        <ListView
            android:id="@+id/full_report_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


    </LinearLayout>
</HorizontalScrollView>








</LinearLayout>
