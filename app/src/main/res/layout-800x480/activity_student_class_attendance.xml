<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.szfp.szfp.view.activity.StudentClassAttendanceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_med"
        android:layout_marginTop="@dimen/space_25"
        android:background="@drawable/shadow"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/space_15"
        android:text="@string/class_attendance" />


    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.szfp.szfplib.weight.StateButton
            android:layout_margin="@dimen/space_20"
            android:padding="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/student_attend"
            android:textSize="@dimen/text_size_17"
            app:normalBackgroundColor="@color/lime"
            android:id="@+id/bt_student_attend"
            app:normalTextColor="@color/black"
            app:pressedBackgroundColor="@color/limegreen"
            app:radius="@dimen/space_2" />

        <com.szfp.szfplib.weight.StateButton
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_20"
            android:id="@+id/bt_staff_attend"
            android:text="@string/staff_attend"
            android:textSize="@dimen/text_size_17"
            android:padding="@dimen/space_20"
            app:normalBackgroundColor="@color/lime"
            app:normalTextColor="@color/black"
            app:pressedBackgroundColor="@color/limegreen"
            app:radius="@dimen/space_2" />

    </LinearLayout>


    <com.szfp.szfplib.weight.StateButton
        android:layout_width="wrap_content"
        android:minEms="10"
        android:gravity="center"
        android:layout_margin="@dimen/space_20"
        android:layout_height="wrap_content"
        android:id="@+id/bt_class_over"
        android:text="@string/class_over"
        android:textSize="@dimen/text_size_17"
        android:padding="@dimen/space_20"
        app:normalBackgroundColor="@color/lime"
        app:normalTextColor="@color/black"
        app:pressedBackgroundColor="@color/limegreen"
        app:radius="@dimen/space_2" />


</LinearLayout>
