<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/text_size_12"
            android:gravity="center"
            android:id="@+id/full_item_no"
            android:padding="@dimen/space_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="5"
            android:text="@string/no" />
        <TextView
            android:textSize="@dimen/text_size_12"
            android:gravity="center"
            android:id="@+id/tv_a_c_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:padding="@dimen/space_5"
            android:text="6666-666-6666" />

        <TextView
            android:textSize="@dimen/text_size_12"
            android:id="@+id/tv_ac_deposits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:minEms="5"
            android:gravity="center"
            android:text="1000" />

        <TextView
            android:id="@+id/tv_ac_date_deposited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxEms="9"
            android:minEms="9"
            android:padding="@dimen/space_5"
            android:text="8/Doc/2017 8:00:00"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:textSize="@dimen/text_size_12"
            android:id="@+id/tv_ac_fare_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:minEms="5"
            android:maxEms="5"
            android:gravity="center"
            android:text="@string/fare_paid" />

        <TextView
            android:textSize="@dimen/text_size_12"
            android:id="@+id/tv_ac_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:minEms="10"
            android:maxEms="10"
            android:gravity="center"
            android:text="00/0000/00 00:00:00" />

        <TextView
            android:padding="@dimen/space_5"
            android:minEms="5"
            android:maxEms="5"
            android:gravity="center"
            android:textSize="@dimen/text_size_12"
            android:id="@+id/tv_ac_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/balance" />
    </LinearLayout>

</LinearLayout>