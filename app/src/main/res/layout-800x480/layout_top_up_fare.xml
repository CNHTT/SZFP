<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:background="@drawable/shadow"
        android:padding="@dimen/space_20"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_up_fare"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_top_up_fare"
            android:layout_margin="@dimen/space_20"
            android:textSize="@dimen/space_20"
            android:padding="@dimen/space_5"
            android:background="@drawable/divbox"
            android:layout_width="@dimen/space_200"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <CheckBox
            android:id="@+id/ck_tup_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/give_receipt"/>


        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space_40">

            <com.szfp.szfplib.weight.StateButton
                android:padding="@dimen/space_5"
                android:id="@+id/bt_ok_tuf"
                android:layout_width="@dimen/space_80"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/update"
                app:normalBackgroundColor="@color/login_normal"
                app:normalTextColor="@color/white"
                app:pressedBackgroundColor="@color/login_pass"
                app:pressedTextColor="@color/white" />

            <View
                android:layout_width="@dimen/space_50"
                android:layout_height="1dp"></View>

            <com.szfp.szfplib.weight.StateButton
                android:id="@+id/bt_cel_tuf"
                android:padding="@dimen/space_5"
                android:layout_width="@dimen/space_80"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                app:normalBackgroundColor="@color/login_normal"
                app:normalTextColor="@color/white"
                app:pressedBackgroundColor="@color/login_pass"
                app:pressedTextColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>