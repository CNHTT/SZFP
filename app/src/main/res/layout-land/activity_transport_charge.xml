<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szfp.szfp.view.activity.TransportChargeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.szfp.szfplib.weight.StateButton
            android:id="@+id/sbt_charge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_10"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/space_5"
            android:text="@string/please_press_the_fingerprint"
            android:textSize="@dimen/text_size_50"
            app:normalBackgroundColor="@color/login_normal"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/login_pass"
            app:pressedTextColor="@color/white"
            app:radius="@dimen/space_2" />


        <com.szfp.szfplib.weight.StateButton
            android:id="@+id/sbt_charge_print"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_10"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/space_5"
            android:text="@string/please_press_the_fingerprint_receipt"
            android:textSize="@dimen/text_size_50"
            app:normalBackgroundColor="@color/login_normal"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/login_pass"
            app:pressedTextColor="@color/white"
            app:radius="@dimen/space_2" />
    </LinearLayout>

    <com.szfp.szfplib.weight.StateButton
        android:id="@+id/sbt_charge_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:gravity="center"
        android:visibility="gone"
        android:padding="@dimen/space_5"
        android:text="@string/back"
        android:textSize="@dimen/text_size_20"
        app:normalBackgroundColor="@color/login_normal"
        app:normalTextColor="@color/white"
        app:pressedBackgroundColor="@color/login_pass"
        app:pressedTextColor="@color/white"
        app:radius="@dimen/space_2" />
</LinearLayout>
