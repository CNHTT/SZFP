<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.szfp.szfp.view.activity.BankStatementActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginRight="@dimen/space_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/shadow"
            android:paddingBottom="@dimen/space_15"
            android:paddingLeft="@dimen/space_30"
            android:paddingRight="@dimen/space_30"
            android:paddingTop="@dimen/space_15"
            android:text="@string/cash_deposit"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/space_100"
                android:text="@string/ac_number"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14" />

            <EditText
                android:id="@+id/et_statement_number"
                android:layout_width="@dimen/space_250"
                android:layout_height="wrap_content"
                android:background="@drawable/text_divbox"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="@dimen/space_10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/space_100"
                android:text="@string/ac_name"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14" />

            <EditText
                android:id="@+id/et_statement_by"
                android:layout_width="@dimen/space_250"
                android:layout_height="wrap_content"
                android:background="@drawable/text_divbox"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="@dimen/space_10" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_40">

            <com.szfp.szfplib.weight.StateButton
                android:id="@+id/bt_statement_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_5"
                android:text="@string/enter"
                app:normalBackgroundColor="@color/login_normal"
                app:normalTextColor="@color/white"
                app:pressedBackgroundColor="@color/login_pass"
                app:pressedTextColor="@color/white" />

            <View
                android:layout_width="200dp"
                android:layout_height="wrap_content"></View>

            <com.szfp.szfplib.weight.StateButton
                android:id="@+id/bt_statement_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_5"
                android:text="@string/cancel"
                app:normalBackgroundColor="@color/login_normal"
                app:normalTextColor="@color/white"
                app:pressedBackgroundColor="@color/login_pass"
                app:pressedTextColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
