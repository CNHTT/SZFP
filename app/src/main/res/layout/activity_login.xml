<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/honeydew"
    tools:context="com.szfp.szfp.view.activity.LoginActivity">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_gravity="center"
            android:padding="@dimen/space_12"
            android:orientation="vertical"
            android:layout_width="@dimen/login_width"
            android:background="@drawable/shadow"
            android:layout_height="@dimen/login_height">
            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/text_large"
                android:text="@string/sing_in"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="@dimen/margin_large"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/text_min"
                android:text="@string/enter_id"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="@dimen/space_24"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/login_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:minLines="1"
                android:maxLength="16"
                android:textSize="@dimen/text_size_24"/>
            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/text_min"
                android:text="@string/enter_pin"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="@dimen/space_24"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/login_pass"
                android:minLines="1"
                android:maxLength="16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:textSize="@dimen/text_size_24"/>

            <com.szfp.szfplib.weight.StateButton
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/space_40"
                android:paddingRight="@dimen/space_40"
                android:text="@string/login"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                app:animationDuration="200"
                app:normalBackgroundColor="@color/actionsheet_blue"
                app:pressedBackgroundColor="@color/actionsheet_gray"
                app:radius="5px" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>
