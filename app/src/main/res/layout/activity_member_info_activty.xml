<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szfp.szfp.view.activity.MemberInfoActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divbox"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_10"
                    android:text="@string/home"
                    android:id="@+id/member_black"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/members_info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/member_info_admin"
                    android:text="ZiZi Admin" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_divbox"
                                android:padding="@dimen/space_15"
                                android:text="@string/acc" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/member_photo"
                                    android:layout_width="120dp"
                                    android:layout_height="180dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/space_10"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/addphoto" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/fosa_account" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/number" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/full_name" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/model" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/national_id" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/registration_date" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/email" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="8"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/fingerprint_key_status" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_fosa_account"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="10"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/fosa_account"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_member_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="10"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/number" />

                                    <TextView
                                        android:id="@+id/tv_member_full_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="10"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/full_name" />
                                    <TextView
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:id="@+id/tv_member_model"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="10"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/model" />

                                    <TextView
                                        android:id="@+id/tv_member_national_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="10"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/national_id"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_member_registration_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="10"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/registration_date"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_member_email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="10"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/email"
                                        android:textSize="@dimen/text_size_13" />

                                    <TextView
                                        android:id="@+id/tv_member_fingerprint_key_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minEms="10"
                                        android:padding="@dimen/space_7"
                                        android:text="@string/fingerprint_key_status" />
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/space_10">

                            <com.szfp.szfplib.weight.StateButton
                                android:id="@+id/bt_member_take_photo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/take_photo"
                                android:textSize="@dimen/space_12"
                                app:normalBackgroundColor="@color/lime"
                                app:normalTextColor="@color/black"
                                app:pressedBackgroundColor="@color/limegreen"
                                app:radius="@dimen/space_2" />


                            <com.szfp.szfplib.weight.StateButton
                                android:id="@+id/bt_member_edit_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_5"
                                android:text="@string/edit_account"
                                android:textSize="@dimen/space_12"
                                app:normalBackgroundColor="@color/lime"
                                app:normalTextColor="@color/black"
                                app:pressedBackgroundColor="@color/limegreen"
                                app:radius="@dimen/space_2" />


                            <com.szfp.szfplib.weight.StateButton
                                android:id="@+id/bt_member_reverse_transaction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_5"
                                android:text="@string/reverse_transaction"
                                android:textSize="@dimen/text_size_10"
                                app:normalBackgroundColor="@color/lime"
                                app:normalTextColor="@color/black"
                                app:pressedBackgroundColor="@color/limegreen"
                                app:radius="@dimen/space_2" />

                            <com.szfp.szfplib.weight.StateButton
                                android:id="@+id/bt_member_customer_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_5"
                                android:text="@string/edit_customer_details"
                                android:textSize="@dimen/text_size_9"
                                app:normalBackgroundColor="@color/lime"
                                app:normalTextColor="@color/black"
                                app:pressedBackgroundColor="@color/limegreen"
                                app:radius="@dimen/space_2" />

                            <com.szfp.szfplib.weight.StateButton
                                android:layout_marginTop="@dimen/space_5"
                                android:id="@+id/bt_member_report"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/reports"
                                android:textSize="@dimen/text_size_12"
                                app:normalBackgroundColor="@color/lime"
                                app:normalTextColor="@color/black"
                                app:pressedBackgroundColor="@color/limegreen"
                                app:radius="@dimen/space_2" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_member_found_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_5"
                            android:background="@drawable/layout_divbox"
                            android:padding="@dimen/space_15"
                            android:text="@string/account_found"
                            android:textSize="@dimen/text_size_15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:background="@color/springgreen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textSize="@dimen/text_size_12"
                                    android:gravity="center"
                                    android:id="@+id/textView3"
                                    android:padding="@dimen/space_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minEms="10"
                                    android:text="@string/account_code" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minEms="14"
                                    android:padding="@dimen/space_5"
                                    android:text="@string/account_type"
                                    android:textSize="@dimen/text_size_12" />

                                <TextView
                                    android:textSize="@dimen/text_size_12"
                                    android:padding="@dimen/space_5"
                                    android:minEms="9"
                                    android:maxEms="9"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/account_status" />

                                <TextView
                                    android:textSize="@dimen/text_size_12"
                                    android:padding="@dimen/space_5"
                                    android:minEms="5"
                                    android:maxEms="5"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/deposits" />

                                <TextView
                                    android:textSize="@dimen/text_size_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/space_5"
                                    android:minEms="10"
                                    android:maxEms="10"
                                    android:gravity="center"
                                    android:text="@string/total" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textSize="@dimen/text_size_12"
                                    android:gravity="center"
                                    android:id="@+id/tv_member_acc_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minEms="10"
                                    android:padding="@dimen/space_5"
                                    android:text="6666-666-6666" />

                                <TextView
                                    android:textSize="@dimen/text_size_12"
                                    android:id="@+id/tv_member_acc_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/space_5"
                                    android:minEms="14"
                                    android:gravity="center"
                                    android:text="1000" />
                                <TextView
                                    android:id="@+id/tv_member_acc_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:maxEms="9"
                                    android:minEms="9"
                                    android:padding="@dimen/space_5"
                                    android:text="8/Doc/2017 8:00:00"
                                    android:textSize="@dimen/text_size_12" />
                                <TextView
                                    android:textSize="@dimen/text_size_12"
                                    android:id="@+id/tv_member_deposits"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/space_5"
                                    android:minEms="5"
                                    android:maxEms="5"
                                    android:gravity="center"
                                    android:text="@string/fare_paid" />
                                <TextView
                                    android:textSize="@dimen/text_size_12"
                                    android:id="@+id/tv_member_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/space_5"
                                    android:minEms="10"
                                    android:maxEms="10"
                                    android:gravity="center"
                                    android:text="0.00" />
                                <TextView
                                    android:padding="@dimen/space_5"
                                    android:minEms="5"
                                    android:maxEms="5"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_size_12"
                                    android:id="@+id/tv_ac_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/balance" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </HorizontalScrollView>



</LinearLayout>
